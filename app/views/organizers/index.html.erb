<h1 align="center">All EVENTRO organizers</h1>

<div class="center">
    <!-- for pagination -->
    <%= will_paginate %>
    <% @organizers.each do |organizer| %>
        <ul class="listing">
            <div class="row">
                <div class="well col-md-4 col-md-offset-4">
                    <li class="event-title">
                        <%= link_to organizer.username, organizer_path(organizer) %>
                    </li>
                    <li><small><%= pluralize(organizer.events.count, "event") if organizer.events %></small></li>
                    <% if logged_in? and current_organizer.admin? %>
                        <li>
                            <%= link_to "Delete this organizer", organizer_path(organizer), method: :delete, 
                                data: { confirm: "Are you sure you want to delete the organizer and all the events by this organizer?" }%>
                        </li>
                    <% end %>
                </div>
            </div>
        </ul>
    <% end %>
    <!-- for pagination -->
    <%= will_paginate %>
</div>