<%= render 'shared/prompts', obj: @event%>

<div class="row">
    <div class="col-xs-12">
        <!--form_form builds the form tag-->
        <%= form_for(@event, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    <%= f.label :title %>
                </label>
                <div class="col-sm-8">
                    <%= f.text_field :title, class: "form-control", placeholder: "Title of Event", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    <%= f.label :description %>
                </label>
                <div class="col-sm-8">
                    <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description of Event" %>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    <%= f.label :venue %>
                </label>
                <div class="col-sm-8">
                    <%= f.text_field :venue, class: "form-control", placeholder: "Venue of Event" %>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    <%= f.label :latitude, "Latitude (Optional)" %>
                </label>
                <div class="col-sm-8">
                    <%= f.text_field :latitude, class: "form-control", placeholder: "Latitude of venue" %>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    <%= f.label :longitude, "Longitude (Optional)" %>
                </label>
                <div class="col-sm-8">
                    <%= f.text_field :longitude, class: "form-control", placeholder: "Longitude of venue" %>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    <%= f.label :startsat, 'Starts on' %>
                </label>
                <div class="col-sm-8">
                    <%= f.datetime_field :startsat, class: "form-control", placeholder: "Date and Time" %>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    <%= f.label :endsat, 'Ends on' %>
                </label>
                <div class="col-sm-8">
                    <%= f.datetime_field :endsat, class: "form-control", placeholder: "Date and Time" %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit class: "btn btn-primary btn-lg" %>
                </div>
            </div>
        <% end %>
        <div class="col-xs-4 col-xs-offset-4">
            [ <%= link_to "Cancel request and return to events listing", events_path %> ]
        </div>
    </div>
</div>